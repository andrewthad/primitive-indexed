name:           primitive-indexed
version:        0.1.0.0
description:    Please see the README on GitHub at <https://github.com/andrewthad/primitive-indexed#readme>
homepage:       https://github.com/andrewthad/primitive-indexed#readme
bug-reports:    https://github.com/andrewthad/primitive-indexed/issues
author:         Andrew Martin
maintainer:     andrew.thaddeus@gmail.com
copyright:      2018 Andrew Martin
license:        BSD3
license-file:   LICENSE
build-type:     Simple
cabal-version:  >= 1.10
extra-source-files:
  README.md

source-repository head
  type: git
  location: https://github.com/andrewthad/primitive-indexed

library
  exposed-modules:
      Data.Primitive.Indexed.Array
      Data.Primitive.Indexed.PrimArray
      Data.Primitive.Indexed.Types
      Data.Primitive.Indexed.Unsafe
  hs-source-dirs:
      src
  build-depends:
      base >=4.9 && <5
    , primitive >= 0.6.4
  default-language: Haskell2010
  ghc-options: -O2 -Wall

test-suite doctest
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Doctests.hs
  build-depends:
      base
    , primitive-indexed
    , doctest >= 0.10
    , QuickCheck
  default-language:    Haskell2010

